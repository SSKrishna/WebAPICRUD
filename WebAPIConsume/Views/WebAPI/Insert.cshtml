<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>

    <script src="../Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnCrtpersons").click(function () {

                $.ajax({
                    type: "POST",
                    url: "http://localhosthttp:55396/Api/Persons/PostPerson",
                    data: {
                        "id": $("#PerID").val(),
                        "Name": $("#PerName").val(),
                        "Address": $("#PerAddress").val(),
                    }

                });
            });


        });

    </script>
</head>
<body>
    <div>

        <div>
            <table id="PersonTable">
                <tr>
                    <td>id</td>
                    <td>
                        <input type="text" id="ID" />
                    </td>
                </tr>
                <tr>
                    <td>name</td>
                    <td>
                        <input type="text" id="Name" />
                    </td>
                </tr>
                <tr>
                    <td>address</td>
                    <td><input type="text" id="Address" />
                </tr>
            </table>
        </div>
        <br />
        <input type="button" id="btnCrtpersons" value="CreatePerson" />
        <br />
    </div>
</body>
</html>

